---
// Importing necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";
import CardSmall from "@components/ui/cards/CardSmall.astro";
import CardWide from "@components/ui/cards/CardWide.astro";
import FeaturesStatsAlt from "@components/sections/features/FeaturesStatsAlt.astro";
import TestimonialsSectionAlt from "@components/sections/testimonials/TestimonialsSectionAlt.astro";

// Importing necessary functions from Astro
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { SITE } from "@data/constants";

// Fetching all the product related content and sorting it by main.id
const product: CollectionEntry<"products">[] = (
  await getCollection("products")
).sort(
  (a: CollectionEntry<"products">, b: CollectionEntry<"products">) =>
    a.data.main.id - b.data.main.id
);

// Define variables for page content
const title: string = "Proyectos";
const subTitle: string =
  "Explora la durabilidad y precisión de las herramientas de Artxe Web, diseñadas tanto para profesionales como para entusiastas. Cada uno de nuestros productos está elaborado con precisión y construido para durar, asegurando que tengas la herramienta correcta para cada trabajo.";

// Testimonial data that will be rendered in the component
const testimonials = [
  // First testimonial data
  {
    content:
      " \"Desde que cambiamos a las herramientas de hardware de Artxe Web, la eficiencia en nuestros sitios de construcción se ha disparado. La durabilidad de los pernos hexagonales y la precisión de los tornillos de máquina son simplemente incomparables. Es refrescante trabajar con una empresa que realmente entiende las demandas diarias de la industria.\" ",
    author: "Jason Clark",
    role: "Capataz de Sitio | TopBuild",
    avatarSrc:
      "https://images.unsplash.com/photo-1500648767791-00dcc994a43e?q=80&w=1374&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
    avatarAlt: "Descripción de Imagen",
  },
  // Second testimonial data
  {
    content:
      " \"Como diseñadora de interiores, siempre busco materiales y herramientas de alta calidad que ayuden a dar vida a mis visiones. El surtido de tornillos mixtos de Artxe Web ha sido un cambio de juego para mis proyectos, proporcionando la mezcla perfecta de calidad y variedad. ¡El soporte al cliente excepcional fue solo la cereza del pastel!\" ",
    author: "María González",
    role: "Diseñadora de Interiores | Creative Spaces",
    avatarSrc:
      "https://images.unsplash.com/photo-1544005313-94ddf0286df2?q=80&w=1376&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
    avatarAlt: "Descripción de Imagen",
  },
  // Third testimonial data
  {
    content:
      " \"He sido carpintero profesional durante más de 15 años, y puedo decir sinceramente que los pernos y tuercas de Artxe Web están entre los mejores que he usado. Se agarran como ningún otro, y tengo plena confianza en cada junta y accesorio. Además, el servicio es impecable: realmente se preocupan por el éxito de mi proyecto.\" ",
    author: "Ricardo Kim",
    role: "Maestro Carpintero | WoodWright",
    avatarSrc:
      "https://images.unsplash.com/photo-1474176857210-7287d38d27c6?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
    avatarAlt: "Descripción de Imagen",
  },
];

const pageTitle: string = `Proyectos | ${SITE.title}`;
const metaDescription =
  "Explora la durabilidad y precisión de las herramientas de Artxe Web, diseñadas tanto para profesionales como para entusiastas.";
const ogTitle = "Herramientas de Hardware | Artxe Web";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://artxeweb.com/proyectos",
    url: "https://artxeweb.com/proyectos",
    name: "Herramientas de Hardware | Artxe Web",
    description:
      "Explora la durabilidad y precisión de las herramientas de Artxe Web, diseñadas tanto para profesionales como para entusiastas.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://artxeweb.com",
      name: "Artxe Web",
      description:
        "Artxe Web ofrece herramientas de hardware de primer nivel y servicios de construcción expertos para satisfacer todas las necesidades de tu proyecto.",
    },
    inLanguage: "es",
  }}
>
  <div
    class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
  >
    <div class="mb-4 flex items-center justify-between gap-8 sm:mb-8 md:mb-12">
      <div class="flex items-center gap-12">
        <h1
          class="text-2xl font-bold tracking-tight text-balance text-neutral-800 md:text-4xl md:leading-tight dark:text-neutral-200"
        >
          {title}
        </h1>
        {
          subTitle && (
            <p class="hidden max-w-(--breakpoint-sm) text-pretty text-neutral-600 md:block dark:text-neutral-400">
              {subTitle}
            </p>
          )
        }
      </div>
      <PrimaryCTA title="Customer Stories" url="#testimonials" noArrow={true} />
    </div>
    {/* Displaying products in alternating styles. Alternative product gets different card styling.
    Maps through all product entries and displays them with either CardSmall or CardWide based on their position. */}
    <section class="grid grid-cols-1 gap-4 sm:grid-cols-3 md:gap-6 xl:gap-8">
      {
        product.map((product, index) => {
          const position = index % 4;
          if (position === 0 || position === 3) {
            return <CardSmall product={product} />;
          } else {
            return <CardWide product={product} />;
          }
        })
      }
    </section>
  </div>
  {/* Features statistics section */}
  <FeaturesStatsAlt
    title="¿Por qué elegir Artxe Web?"
    subTitle="Transforma tus ideas en resultados tangibles con las herramientas de Artxe Web. Ya sea que comiences con un boceto en una servilleta o te sumerjas en un proyecto de construcción integral, nuestras herramientas están diseñadas para ayudarte a construir con confianza."
    benefits={[
      "Herramientas robustas y confiables para rendimiento duradero.",
      "Soluciones innovadoras adaptadas a las necesidades de construcción modernas.",
      "Soporte al cliente dedicado al éxito de tu proyecto.",
    ]}
  />
  {/* Testimonials section */}
  <TestimonialsSectionAlt
    title="Lo que Dicen Nuestros Clientes"
    testimonials={testimonials}
  />
</MainLayout>
